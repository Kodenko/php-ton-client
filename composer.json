{
  "name": "extraton/php-ton-client",
  "description": "Extraton PHP TON client",
  "type": "library",
  "license": "MIT",
  "homepage": "https://extraton.io/",
  "authors": [
    {
      "name": "Maxim Karanaev",
      "email": "imaxvx@gmail.com",
      "homepage": "https://github.com/maxvx"
    }
  ],
  "require": {
    "php": "^7.4",
    "ext-ffi": "*",
    "ext-json": "*",
    "ext-zlib": "*",
    "guzzlehttp/promises": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "friendsofphp/php-cs-fixer": "^2.16.7",
    "phpstan/phpstan": "^0.12.54"
  },
  "autoload": {
    "psr-4": {
      "Extraton\\TonClient\\": "src/",
      "Tests\\Unit\\Extraton\\TonClient\\": "tests/Unit/",
      "Tests\\Integration\\Extraton\\TonClient\\": "tests/Integration/"
    }
  },
  "scripts": {
    "post-update-cmd": [
      "Extraton\\TonClient\\Composer\\PostScript::downloadLibrary"
    ],
    "post-install-cmd": [
      "Extraton\\TonClient\\Composer\\PostScript::downloadLibrary"
    ]
  },
  "extra": {
    "sdk-version": "1.0.0"
  },
  "bin": [
    "bin/*"
  ]
}
